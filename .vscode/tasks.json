{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wimplicit-function-declaration",
                "-g",
                "-std=c99",
                "${workspaceFolder}/decode.c",
                "${workspaceFolder}/parray.c",
                "${workspaceFolder}/pdu.c",
                "${workspaceFolder}/pg_walgettx.c",
                "${workspaceFolder}/pg_xlogreader.c",
                "${workspaceFolder}/read.c",
                "${workspaceFolder}/stringinfo.c",
                "${workspaceFolder}/tools.c",
                "${workspaceFolder}/info.c",
                "-o",
                "${workspaceFolder}/pdu",
                "-Wl,-Bstatic",
                "-Wl,-Bdynamic",
                "-lm",
                "-lpthread",
                "-lz",
                "-llz4",
                "-ldl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/gcc"
        }
    ]
}
